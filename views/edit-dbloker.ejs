<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Contact</h2>

            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                  <% }) %>
                </ul>
              </div> 
            <% } %>

            <form method="post" action="/dbloker/update">
                <input type="hidden" name="oldNama" value="<%= (dbloker.oldNama) ?
                dbloker.oldNama : dbloker.nama %>" /> 
                <input type="hidden" name="oldIp" value="<%= (dbloker.oldIp) ?
                dbloker.oldIp : dbloker.ipaddress %>" /> 
                <div class="form-group">
                  <label for="nama">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= dbloker.nama %>"/>
                </div>
                <div class="form-group">
                  <label for="lokasi">Lokasi</label>
                  <input type="text" class="form-control" id="lokasi" name="lokasi" required value="<%= dbloker.lokasi %>"/>
                </div>
                <div class="form-group">
                  <label for="ipaddress">IP Address</label>
                  <input type="text" class="form-control" id="ipaddress" name="ipaddress" required value="<%= dbloker.ipaddress %>"/>
                </div>

                <% if (dbloker.tgl_aktif && Object.keys(dbloker.tgl_aktif).length > 0) { 
                    const currentDate = new Date(); %>
                    <input type="hidden" id="tgl_aktif" name="tgl_aktif" value="<%= currentDate %>">
                <% } %>


                <input type="hidden" value="off" class="form-control" id="jammer_rc" name="jammer_rc" />
                <input type="hidden" value="off" class="form-control" id="jammer_gps" name="jammer_gps" />

                <button type="submit" class="btn btn-primary">Ubah Data dbloker</button>
              </form>
              
        </div>
    </div>
</div>