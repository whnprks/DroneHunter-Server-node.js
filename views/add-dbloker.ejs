<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Tambah Data Jammer</h2>

            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                  <% }) %>
                </ul>
              </div> 
            <% } %>

            <form method="post" action="/dbloker">
                <div class="form-group">
                  <label for="nama">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required />
                </div>
                <div class="form-group">
                  <label for="lokasi">lokasi</label>
                  <input type="text" class="form-control" id="lokasi" name="lokasi" required />
                </div>
                <div class="form-group">
                  <label for="ipaddress">IP Address</label>
                  <input type="text" class="form-control" id="ipaddress" name="ipaddress" required />
                </div>
                <input type="hidden" value="off" class="form-control" id="jammer_rc" name="jammer_rc" />
                <input type="hidden" value="off" class="form-control" id="jammer_gps" name="jammer_gps" />

                <button type="submit" class="btn btn-primary">Tambah Data</button>
              </form>
              
        </div>
    </div>
</div>